<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/splash_icon01" />

        <LinearLayout
            android:id="@+id/turn_activity_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/shape_semitransparent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_seven_margin"
            android:paddingLeft="@dimen/dp_twelve_margin"
            android:paddingRight="@dimen/dp_twelve_margin"
            android:paddingTop="@dimen/dp_seven_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳过"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_twelve_size" />

            <TextView
                android:id="@+id/txt_down_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_four_margin"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_twelve_size" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>